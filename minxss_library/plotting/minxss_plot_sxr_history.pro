charsize=cs, charthick=ct, align=0.5, orient=90.endifxbox = 1979.2+[0,0,5.5,5.5,0]ybox = efactor/[1.,18,18,1,1]polyfill, xbox, ybox, color=cpuroplot, xbox, ybox, thick=2xyouts, 1984, 0.052, 'P78-1 MONEX (6 ch)', charsize=cs, charthick=ct, align=0.5, color=cpurxbox = 1979.2+[0,0,5.5,5.5,0]ybox = [0.78,2.5,2.5,0.78,0.78]polyfill, xbox, ybox, color=cgrnoplot, xbox, ybox, thick=2xyouts, 1982, 2.8, 'P78-1 SOLEX', charsize=cs, charthick=ct, align=0.5, color=cgrnxbox = 1980.2+[0,0,9.5,9.5,0]ybox = [0.14,2.2,2.2,0.14,0.14]polyfill, xbox, ybox, color=cblueoplot, xbox, ybox, thick=2xyouts, 1985, 0.3, 'SMM FCS (7 ch)', charsize=cs, charthick=ct, align=0.5ybox = [0.17,0.2,0.2,0.17,0.17]polyfill, xbox, ybox, color=cgrnoplot, xbox, ybox, thick=2xyouts, 1988, 0.11, 'SMM BCS', charsize=cs, charthick=ct, align=0.0, color=cgrnoplot, 1986.5+[0,0,1],[0.17,0.12,0.12]if (doP78_SOLFLEX ne 0) then begin; 4 narrow bandsxbox = 1979.2+[0,0,5.5,5.5,0]ybox = [0.182,0.197,0.197,0.182,0.182]polyfill, xbox, ybox, color=cgrnybox = [0.298,0.307,0.307,0.298,0.298]polyfill, xbox, ybox, color=cgrnybox = [0.314,0.324,0.324,0.314,0.314]polyfill, xbox, ybox, color=cgrnybox = [0.826,0.853,0.853,0.826,0.826]polyfill, xbox, ybox, color=cgrnybox = [0.18,0.855,0.855,0.18,0.18]oplot, xbox, ybox, thick=2xyouts, 1981.9, 0.9, 'P78-1 SOLFLEX', charsize=cs, charthick=ct, align=0.5endifxbox = 1981.2+[0,0,1.3,1.3,0]ybox = [0.17,0.2,0.2,0.17,0.17]polyfill, xbox, ybox, color=corgoplot, xbox, ybox, thick=2xyouts, 1985.5, 0.07, 'Hinotori SOX', charsize=cs, charthick=ct, align=0.0oplot, 1981.6+[0.3,0.3,3.6],[0.17,0.08,0.08], thick=2, color=corgxbox = 1981.2+[0,0,1.3,1.3,0]ybox = [0.045,0.01,0.01,0.045,0.045]polyfill, xbox, ybox, color=corgoplot, xbox, ybox, thick=2xyouts, 1982.7, 0.02, 'Hinotori HXS', charsize=cs, charthick=ct, align=0.0xbox = 1991.8+[0,0,10.3,10.3,0];ybox = efactor/[1,10,10,1,1.]ybox = [0.17,0.51,0.51,0.17,0.17]polyfill, xbox, ybox, color=corgoplot, xbox, ybox, thick=2xyouts, 1996.8, 0.25, 'Yohkoh BCS (4 ch)', charsize=cs, charthick=ct, align=0.5xbox = 1991.4+[0,0,9.3,9.3,0]ybox = efactor/[25.,124,124,25.,25.]polyfill, xbox, ybox, color=cpuroplot, xbox, ybox, thick=2xyouts, 1996., 0.055, 'CGRO BATSE (8 ch)', charsize=cs, charthick=ct, align=0.5, color=cpurxbox = 2002.3+[0,0,16,16,0]ybox = [0.01,0.4,0.4,0.01,0.01]polyfill, xbox, ybox, color=cblueoplot, xbox, ybox, thick=2xyouts, 2009, 0.03, 'RHESSI', charsize=cs, charthick=ct, align=0.5xbox = 2001.6+[0,0,4.3,4.3,0]ybox = efactor/[3,30,30,3,3]   ; convert keV to nmybox = [0.33,0.61,0.61,0.33,0.33]polyfill, xbox, ybox, color=cpuroplot, xbox, ybox, thick=2xyouts, 2002., 0.7, 'CORONAS-F RESIK', charsize=cs, charthick=ct, color=cpur, align=1oplot, [2003.2,2003.2,2002.2], [0.61,0.75,0.75], thick=2xbox = 2009.2+[0,0,0.7,0.7,0]ybox = efactor/[1,15,15,1,1.]   ; convert keV to nmpolyfill, xbox, ybox, color=cpuroplot, xbox, ybox, thick=2xyouts, 2008., 1.5, 'CORONAS-PHOTON SpinX', align=1, charsize=cs, charthick=ct, color=cpuroplot, [2009.4,2009.4,2008.2], [efactor/1.,1.55,1.55], thick=2xbox = 1996.1+[0,0,16,16,0]ybox = [15,20,20,15,15]polyfill, xbox, ybox, color=cpuroplot, xbox, ybox, thick=2xyouts, 1997, 11, 'SOHO CDS', charsize=cs, charthick=ct, align=0, color=cpurxbox = 2006.8+[0,0,9,9,0]ybox = [17,20,20,17,17]polyfill, xbox, ybox, color=cgrnoplot, xbox, ybox, thick=2xyouts, 2010, 11.5, 'Hinode EIS', charsize=cs, charthick=ct, align=1, color=cgrnxbox = 2010.4+[0,0,8,8,0]ybox = [6,20,20,6,6.]polyfill, xbox, ybox, color=cblueoplot, xbox, ybox, thick=2xyouts, 2011.0, 12, 'SDO EVE', charsize=cs, charthick=ct, align=0.0xbox = 2012.4+[0,0,2.7,2.7,0]ybox = efactor/[1,10,10,1,1.]polyfill, xbox, ybox, color=cgrnoplot, xbox, ybox, thick=2xyouts, 2012, 2.5, 'MESSENGER SAX', charsize=cs, charthick=ct, align=1, color=cgrnoplot, [2013,2013,2012.2], [efactor/1.,2.55,2.55], thick=2xbox = 2003.9+[0,0,2,2,0]ybox = efactor/[4,25,