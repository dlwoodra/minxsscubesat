;; 	program to calculate filter transmission constants for henke_data_set;	NOTE THIS IS constant to be used in exp(- thick / constant);	and NOT the transmission itself;	(i.e., independent on thickness);;	calls henke_t;;	TNW   5/93;pro filter_const, wave, cename = ''tname = ''num = 0el = ''thick = 0.0wave = -1c = -1	read, 'Enter element name (CR to end, ex: Al) : ', el	if el ne '' then begin	  elsave = strtrim(el, 2)	  henke_t, el, wv, mu	  if el eq elsave then begin		wave = wv		c = mu		print, 'Units for constant is Angstroms ...'	  endif else begin		print, 'Unable to find ' + elsave, '  Check upper/lower case ?'		el = ' '	  endelse	endifreturnend